HOST=0.0.0.0
# port
PORT=3000 # 443 - https, 80 - http

# Other Environment-Specific Settings
LOG_LEVEL=debug  # Options could be 'debug', 'info', 'warn', 'error'

# Environment: Only use `secure` in production
NODE_ENV=development  # Change to 'production' when deploying to production

# database
DB_HOST=localhost
DB_USER=postgres
DB_PASSWORD=root
DB_NAME=auth_system

# jwt
JWT_SECRET=your_secret_key

# cookie-parser
COOKIE_PARSER_SECRET_KEY=mysecretkey
COOKIE_HTTPONLY=true # Cannot be accessed by JavaScript
COOKIE_SECURE=false # Set to true if you're using HTTPS
COOKIE_SAMESITE=strict # 'strict' = Helps prevent CSRF, 'lax' is less restrictive and should work with most requests

# cookie-session
COOKIE_SESSION_SECRET=mycookiesecret
COOKIE_SESSION_NAME=session
COOKIE_SESSION_HTTPONLY=true # Prevent client-side JavaScript from accessing the cookie
COOKIE_SESSION_SAMESITE='lax' # Helps prevent CSRF attacks

# express-session
SESSION_SECRET=yoursessionsecret

# email
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your@gmail.com
EMAIL_PASS=mailpass
BASE_URL=http://127.0.0.1:3000/